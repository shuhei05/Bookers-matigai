<div class="edit-all">
<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
  <div class="edit">Title<br>
  <%= f.text_field :title %></div>
  <div class="edit">Body<br>
  <%= f.text_area :body %></div><br>
  <div class="edit"><%= f.submit"Update Book" %></div>
  <div class"edit"><%= link_to "Show", book_path(@book.id),method: :get %> | <%= link_to "Back", books_path %></div>
  <% end %>
</div>