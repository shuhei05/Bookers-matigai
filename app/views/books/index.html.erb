<header>
<h2 class="books">Books</h2>
</header>

<main>
<section class="hon">
  <div class="tit">Title</div>

  <% @books.each do |book| %>
  <div class="namae"><%= book.title %></div>
  <% end %>
</section>

<section class="naiyou">
  <div class="tit">Body</div>
  <% @books.each do |book| %>
  <div class="namae"><%= book.body %></div>
  <% end %>
</section>

<div class="page">
<% @books.each do |book| %>
  <div class="namae"><%= link_to "Show", book_path(book.id),method: :get %> <%= link_to "Edit", edit_book_path(book.id),method: :get %> <%= link_to "Delete", @book, method: :delete %></div>
<% end %>
</div>

</main>

<footer>
  <h3>New book</h3>
<%= form_with model:@book, local:true do |f| %>
  <div>Title</div>
  <%= f.text_field :title %>
  <div>Body</div>
  <%= f.text_area :body %><br>
  <%= f.submit"Create Book" %>
  <% end %>
</footer>