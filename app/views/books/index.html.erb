<div class="notice"><%= notice %></div>

<header>
<h2 class="books">Books</h2>
</header>

<main>
<section class="hon">
  <div class="tit">Title</div>

  <% @books.each do |book| %>
  <div class="namae"><%= book.title %></div>
  <% end %>
</section>

<section class="naiyou">
  <div class="tit">Body</div>
  <% @books.each do |book| %>
  <div class="namae"><%= book.body %></div>
  <% end %>
</section>

<div class="page">
  <div class="box"></div>
<% @books.each do |book| %>
  <div class="namae">

    <div class="link"><%= link_to "Show", book_path(book.id),method: :get %></div>
    <div class="link"><%= link_to "Edit", edit_book_path(book.id),method: :get %></div>
    <div class="link"><%= link_to "Delete", book_path(book.id),method: :delete,"data-confirm" =>"Are you sure?" %></div>

    </div>

<% end %>
</div>

</main>

<footer>
  <h3 class="books">New book</h3>
<%= form_with model:@book, local:true do |f| %>
<% if @book.errors.any? %>
        <ul>
            <% @book.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>
  <div>Title</div>
  <div class="text"><%= f.text_field :title %></div>
  <div>Body</div>
  <div class="text"><%= f.text_area :body %></div>
  <div><%= f.submit"Create Book" %></div>
  <% end %>
</footer>